@model DanFestaJuninaCore.ViewModels.DishDetailsViewModel

@{
    Layout = "~/Views/Shared/_LayoutInside.cshtml";
}

<div id="header" id="navbar">
    <a href="/" class="ui red button">Home</a>
    <a href="/dish/dishlistpictures" class="ui teal button">Menu</a>
    <a href="/orderlist" class="ui teal button ">Orders</a>

    @if (Model.Info.IsAdmin == "Yes")
    {
        <a href="/dish/dishlistdetails" class="ui teal button">Dishes</a>
        <a href="/activitylist" class="ui teal button ">Activities</a>
    }
</div>

<p />

<form action="Submit" method="POST" />

<myHero>
    <h3>@Model.Info.Name</h3>
</myHero>

<div id="header">
    <button type="submit" formaction="/dish/dishadddisplay" value="Add" class="ui teal button">Add Dish</button>
    <button type="submit" formaction="/dish/dishupdatedisplay" value="Update" class="ui teal button">Update</button>
    <button type="submit" formaction="/dish/dishdeletemultiple" value="Delete" class="ui teal button">Delete</button>
</div>

<div style="float:left;" class="table-responsive">
    <p>
        <table class="ui compact celled definition table">
            <!-- <table class="table table-striped table-bordered"> -->

            <thead class="full-width">
                <tr>
                    <th><b>Name</b></th>
                    <th><b>Id</b></th>
                    <th><b>Type</b></th>
                    <th><b>Price</b></th>
                    <th><b>GlutenFree</b></th>
                    <th><b>DairyFree</b></th>
                    <th><b>Vegetarian</b></th>
                    <th><b>InitialAvailable</b></th>
                    <th><b>CurrentAvailable</b></th>
                    <th><b>ActivityType</b></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dish in Model.DishVM)
                {

                <tr>
                    <td>
                        <a href="/dish/dishviewdisplay?dishname=@dish.Name" class="ui black basic button">@dish.Name</a>
                    </td>
                    <td>@dish.Id</td>
                    <td>@dish.Type</td>
                    <td>@dish.Price</td>
                    <td>@dish.GlutenFree</td>
                    <td>@dish.DairyFree</td>
                    <td>@dish.Vegetarian</td>
                    <td>@dish.InitialAvailable</td>
                    <td>@dish.CurrentAvailable</td>
                    <td>@dish.ActivityType</td>
                </tr>
                }
            </tbody>
            <tfoot class="full-width">
                <tr>
                    <th></th>
                    <th colspan="4">
                        <div class="ui right floated small primary labeled icon button">
                            <i class="user icon"></i> Test But
                        </div>
                        <div class="ui small  button">
                            Approve Test
                        </div>
                        <div class="ui small  disabled button">
                            Approve All Test
                        </div>
                    </th>
                </tr>
            </tfoot>
        </table>
    </p>
</div>
</form>
<table></table>
<div id="footer">
    <div id="header" id="navbar">
        <a href="/login" class="ui violet basic button">Login</a>
        <a href="/logout" class="ui violet basic button">Logout</a>
    </div>
</div>
